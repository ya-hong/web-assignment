extends contest-layout

block content
    h1  #{contest.title}
    p teacher: #{contest.teacher} 
    p class: #{contest.class}
    p score: #{contest.score}

    hr
    p 你已经参加过了考试， 你的得分为 #{user.scores[id]}
    hr

    p tasks: 

    ul.list-group
        each task, i in contest.tasks
            li.list-group-item
                h3  #{i + 1}. 
                p   task: #{task.name} (#{task.score} pts)

                input(type="checkbox", name= i + "A", value = user.contests[id][i].A ? "on" : "off")
                |&nbsp; A: #{task.A.desc}
                br
                input(type="checkbox", name= i + "B", value = user.contests[id][i].B ? "on" : "off")
                |&nbsp; B: #{task.B.desc}
                br
                input(type="checkbox", name= i + "C", value = user.contests[id][i].C ? "on" : "off")
                |&nbsp; C: #{task.C.desc}
                br
                input(type="checkbox", name= i + "D", value = user.contests[id][i].D ? "on" : "off")
                |&nbsp; D: #{task.D.desc}
